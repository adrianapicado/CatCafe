<h2> Your appointments </h2>
 <br>
<% @appointments.each do |appointment| %>
    <li><%= appointment.coffee %> to enjoy with <%= link_to appointment.cat.name, cat_path(appointment.cat_id) %> @ <%= appointment.date%></li> 
    <% if logged_in? %>
       <%= link_to 'Edit your appointment', edit_appointment_path(appointment) %>
       <br>
       <br>
      <% end %>
  <% end %>